{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CloudFormation",
            "Action": [
                "cloudformation:CreateChangeSet",
                "cloudformation:CreateStack",
                "cloudformation:CreateUploadBucket",
                "cloudformation:ExecuteChangeSet",
                "cloudformation:GetStackPolicy",
                "cloudformation:ListStacks",
                "cloudformation:SetStackPolicy",
                "cloudformation:UpdateStack"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:cloudformation:us-east-1:130783386804:stack/heyitschris-com-infra"
        },
        {
            "Sid": "CloudFormationValidateTemplate",
            "Action": [
                "cloudformation:ValidateTemplate"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "UpdateCFTemplate",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::cf-templates*/*"
        },
        {
            "Sid": "UpdateCFTemplate2",
            "Action": [
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::cf-templates*"
        },
        {
            "Sid": "StaticWebsiteUpdate",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::heyitschris-com/*"
        },
        {
            "Sid": "BackendSAMDeployArtifacts",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::heyitschris-com-misc/*"
        },
        {
            "Sid": "StaticWebsiteUpdate2",
            "Action": [
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::heyitschris-com"
        },
        {
            "Sid": "StaticBlogWebsiteUpdate",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::heyitschris-com-blog/*"
        },
        {
            "Sid": "StaticBlogWebsiteUpdate2",
            "Action": [
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::heyitschris-com-blog"
        },
        {
            "Sid": "StaticBlogWebsiteCloudFrontInvalidation",
            "Action": [
                "cloudfront:CreateInvalidation"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:cloudfront::130783386804:distribution/E1NSOHDL8AF4CQ"
        },
        {
            "Sid": "IAM",
            "Action": [
                "iam:PassRole"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:iam::130783386804:role/CloudFormationDeployS3StaticWebsiteRole"
        }
    ]
}